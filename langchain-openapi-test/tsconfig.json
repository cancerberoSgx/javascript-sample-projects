{
  "compilerOptions": {
    "target": "ES2020", // or higher
    "module": "nodenext",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": [
    "src"
  ],
}