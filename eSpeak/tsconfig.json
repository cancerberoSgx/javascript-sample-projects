{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution":"node",
    "lib": [
      "esnext", "dom"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true, "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "sourceMap": true,
    "jsx": "react",  
    "jsxFactory": "createElement",
    "declaration": true,
  },
  "include":["src", "spec"],
}