{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test/config/cloudflare/worker"
  ]
}